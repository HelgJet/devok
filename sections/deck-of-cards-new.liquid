
<style>
.deck-of-cards-section .buttons {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.deck-of-cards-section .step-btn {
  padding: 10px 20px;
  margin: 0 5px;
  cursor: pointer;
}

.deck-of-cards-section .step-content {
  display: none;
  text-align: center;
}

.deck-of-cards-section .step-content.active {
  display: block;
}

.deck-of-cards-section .card-container {
  width: 150px;
  height: 210px;
  margin: 0 auto;
  cursor: pointer;
}

.deck-of-cards-section .card-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.deck-of-cards-section .cards-container {
  display: flex;
  overflow-x: scroll;
  gap: 10px;
  justify-content: center;
  cursor: grab;
  padding: 10px;
}

.deck-of-cards-section .cards-container.active {
  cursor: grabbing;
}

.deck-of-cards-section .card {
  flex: 0 0 150px;
  height: 210px;
  box-sizing: border-box;
  overflow: hidden;
}

.deck-of-cards-section .card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.shuffle-card {
  animation: shuffle 1s ease forwards;
}

@keyframes shuffle {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0);
  }
}


</style>
<div id="deck-of-cards-section" class="deck-of-cards-section">
  <div class="buttons">
    <button class="step-btn" data-step="1">Step 1</button>
    <button class="step-btn" data-step="2" onclick="shuffleDeck()">Step 2: Shuffle & Swipe Deck</button>
    <button class="step-btn" data-step="3">Step 3</button>
  </div>

  <div class="step-content step-1 active">
    <div class="card-container" onclick="toggleCardContent(1)">
      <img src="https://deckofcardsapi.com/static/img/AS.png" alt="Card 1" class="card-image" />
    </div>
  </div>

  <div class="step-content step-2">
    <div class="cards-container" id="cards-container">
      <!-- Cards will be displayed here after fetching from API -->
    </div>
  </div>

  <div class="step-content step-3">
    <div class="card-container" onclick="toggleCardContent(3)">
      <img src="https://deckofcardsapi.com/static/img/2H.png" alt="Card 1" class="card-image" />
    </div>
  </div>
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const buttons = document.querySelectorAll('.step-btn');
  const stepContents = document.querySelectorAll('.step-content');
  let cardsData = []; // To store the cards data

  // Handle step navigation
  buttons.forEach(button => {
    button.addEventListener('click', function() {
      const step = this.dataset.step;

      // Hide all step content
      stepContents.forEach(content => {
        content.classList.remove('active');
      });

      // Show selected step content
      document.querySelector(`.step-${step}`).classList.add('active');
    });
  });

  // Function to toggle card content in Step 1 and Step 3
  window.toggleCardContent = function(step) {
    const cardImage = document.querySelector(`.step-${step} .card-image`);
    const currentSrc = cardImage.src;
    const newSrc = currentSrc.includes('AS.png') ? 'https://deckofcardsapi.com/static/img/2H.png' : 'https://deckofcardsapi.com/static/img/AS.png';
    cardImage.src = newSrc;
  };

  // Function to fetch and shuffle deck of cards from Deck of Cards API
  window.shuffleDeck = function() {
    fetch('https://deckofcardsapi.com/api/deck/new/draw/?count=54')
      .then(response => response.json())
      .then(data => {
        cardsData = data.cards;
        animateShuffle(cardsData);
      })
      .catch(error => console.error('Error fetching cards:', error));
  };

  // Function to shuffle array
  function shuffleArray(array) {
    for (let i = array.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [array[i], array[j]] = [array[j], array[i]];
    }
  }

  // Function to animate the shuffle and then display the cards
  function animateShuffle(cards) {
    const cardsContainer = document.getElementById('cards-container');
    cardsContainer.innerHTML = ''; // Clear previous cards if any

    cards.forEach((card, index) => {
      const cardElement = document.createElement('div');
      cardElement.className = 'card shuffle-card';
      cardElement.style.animationDelay = `${index * 0.05}s`;
      cardElement.innerHTML = `<img src="${card.image}" alt="${card.value} of ${card.suit}" class="card-image" />`;
      cardsContainer.appendChild(cardElement);
    });

    // Shuffle cards after animation completes
    setTimeout(() => {
      shuffleArray(cardsData);
      cardsContainer.innerHTML = ''; // Clear the cards

      cardsData.forEach(card => {
        const cardElement = document.createElement('div');
        cardElement.className = 'card';
        cardElement.innerHTML = `<img src="${card.image}" alt="${card.value} of ${card.suit}" class="card-image" />`;
        cardsContainer.appendChild(cardElement);
      });

      initializeSwiper();
    }, cards.length * 50 + 1000); // Adjust timing based on animation duration
  }

  // Initialize swiper functionality
  function initializeSwiper() {
    const swiperContainer = document.getElementById('cards-container');
    let isDown = false;
    let startX;
    let scrollLeft;

    swiperContainer.addEventListener('mousedown', (e) => {
      isDown = true;
      swiperContainer.classList.add('active');
      startX = e.pageX - swiperContainer.offsetLeft;
      scrollLeft = swiperContainer.scrollLeft;
    });

    swiperContainer.addEventListener('mouseleave', () => {
      isDown = false;
      swiperContainer.classList.remove('active');
    });

    swiperContainer.addEventListener('mouseup', () => {
      isDown = false;
      swiperContainer.classList.remove('active');
    });

    swiperContainer.addEventListener('mousemove', (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - swiperContainer.offsetLeft;
      const walk = (x - startX) * 3; //scroll-fast
      swiperContainer.scrollLeft = scrollLeft - walk;
    });
  }
});


</script>

